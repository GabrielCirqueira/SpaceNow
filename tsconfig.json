{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["web/*"],
      "@/*": ["web/*"],
      "@components/*": ["web/components/*"],
      "@pages/*": ["web/pages/*"],
      "@themes/*": ["web/themes/*"],
      "@layouts/*": ["web/layouts/*"],
      "@shadcn/lib/*": ["web/shadcn/lib/*"],
      "@shadcn/hooks/*": ["web/shadcn/hooks/*"],
      "@shadcn/layout/*": ["web/shadcn/layout/*"],
      "@shadcn/typography/*": ["web/shadcn/typography/*"],
      "@shadcn/components/*": ["web/shadcn/components/*"],
      "@shadcn/*": ["web/shadcn/*"]
    },
    "types": ["vite/client"],
    "lib": ["DOM", "ESNext"]
  },
  "include": [
    "assets/js",
    "web/components",
    "web/http",
    "web/services",
    "web/layouts",
    "web/pages",
    "web/themes",
    "web/App.tsx",
    "web/main.tsx",
    "web/vite-env.d.ts",
    "web/**/*"
  ],
  "exclude": ["node_modules", "vendor", "public/build"]
}
